@import 'mixins'

h2
  font: 20px arial,lucida,helvetica,arial,sans-serif
  font-weight: normal

pre, code
  font-size: 12px; line-height: 18px
  font-family: Monaco, Consolas, "Lucida Console", monospace
  color: #000
  margin: 0; padding: 0

pre
  margin: 0 0 10px 15px
  background: transparent
  
  code
    background: transparent
    
p
  margin: 0 0 10px 0
  line-height: 1.7em

#header h1
  border-top: 1px solid rgba(0, 0, 0, .5)
  border-bottom: 1px solid rgb(0, 0, 0)
  
  inset-line(0.1)
  vbg-gradient(lighten(#313335, 10%), lighten(#191B1C, 5%))
  color: #FFF
  text-shadow: 0 -1px #000

  height: 30px
  line-height: 30px
  padding: 0 10px
  margin: 0
  font-size: 18px
  
  a
    color: inherit
    text-shadow: inherit
  
#header h2
  inset-line()
  vbg-gradient(#F4F4F4, darken(#F4F4F4, 10%))
  padding: 0 5px
  margin: 0
  text-align: center
  
  height: 40px
  line-height: 40px
  border-bottom: 1px solid darken(#D1D1D1, 5%)

#article
  overflow: hidden
  position: absolute
  top: 73px
  bottom: 0
  left: 0
  right: 0

#nav
  position: absolute
  top: 0
  left: 0
  bottom: 0

  width: 220px
  background: #F4F4F4
  overflow: auto
  text-align: right
  
  border-right: 1px solid lighten(#CCC, 40%)
  inset-box-shadow(-1px, -1px, 4px, rgba(0, 0, 0, 0.05))
  
  h2
    margin: 25px 35px 10px 0
    
  ul
    list-style: none
    text-align: right
    margin: 5px 35px 5px 0
    font-size: 15px
    text-shadow: 0 1px 0 #FFF
    color: lighten(#52585D, 10%)
    
  li
    margin: 10px 0
    
  a
    color: inherit
    
  #search
    border: 1px solid lighten(#D1D1D1, 20%)
    border-width: 1px 0
    inset-line(0.7)
    margin: 25px 15px
    padding: 10px 0
    text-align: center
    background: -webkit-gradient(linear, left top, right top, from(rgba(255, 255, 255, 0)), color-stop(0.2, rgba(255, 255, 255, 0.4)), color-stop(0.8, rgba(255, 255, 255, 0.4)), to(rgba(255, 255, 255, 0)))
    -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.5), 0 1px 0 rgba(255, 255, 255, 0.5)
    
    input
      width: 150px
      outline: none
      
    position: relative
      
    &:before
      content: ""
      position: absolute
      left: 0
      top: -5px
      bottom: -5px
      width: 20px
      background: -webkit-gradient(linear, left top, right top, from(rgba(244, 244, 244, 1)), to(rgba(244, 244, 244, 0.3)))

    &:after
      content: ""
      position: absolute
      right: 0
      top: -5px
      bottom: -5px
      width: 20px
      background: -webkit-gradient(linear, left top, right top, from(rgba(244, 244, 244, 0.3)), to(rgba(244, 244, 244, 1)))
  
#section
  position: absolute
  top: 0
  left: 220px
  bottom: 0
  right: 0

  background: #FFF
  padding: 25px 35px    
  
  font: 15px 'helvetica neue', helvetica, arial, sans-serif
  overflow: auto
  
  p, hr, h2, h3, ul, ol
    max-width: 550px
    
  h2
    font-size: 18px
    margin: 5px 0 10px 0px
    line-height: 1.4em
    border-bottom: 1px solid lighten(#D1D1D1, 20%)
    
  h3
    font-weight: normal
    
  ul, ol
    margin: 10px 0
    line-height: 1.7em
    
  .preview
    position: relative
    
    .handle  
      position: absolute
      left: 520px
      top: 0
      padding: 0px 4px
      height: 15px
      line-height: 10px
      font-size: 13px
      cursor: pointer

body.docs-index #section
  h2
    font: 20px arial, lucida, helvetica, arial, sans-serif
    font-weight: normal
    border-bottom: 1px solid lighten(#D1D1D1, 50%)
    padding: 0 0 5px 0
    margin: 10px 150px 20px 0

  article
    overflow: hidden
    max-width: 700px
    
    div
      width: 200px
      height: 50px
      float: left
      margin: 0 30px 30px 0      
      
      h3
        font: 18px arial, lucida, helvetica, arial, sans-serif
        font-weight: normal
        margin: 5px 0
      
      span
        line-height: 1.3em
        display: block
        opacity: 0.7
        
body.api #section
  h2
    margin: 20px 0
    
    &:first-child
      margin-top: 0

  h3
    padding: 3px 5px
    margin: 10px 0
    border-bottom: 1px solid lighten(#CCC, 40%)
